{% extends 'base.html.twig' %}

{% block title %}WebGestion - Accueil{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('/css/home.css') }}" type="text/css" />
{% endblock %}

{% block body %}
