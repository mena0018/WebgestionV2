{% extends 'base.html.twig' %}

{% block title %}WebGestion - Profil de {{ app.user.login }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('/css/profile.css') }}" type="text/css" />
{% endblock %}

{% block body %}

<main class="main-content" role="main">
    {% if app.user.administrateur %}
        <h1>Page profil du professeur</h1>
    {% else %}
        <h1>Page profil de l'élève </h1>
    {% endif %}
</main>

    <div class="container">
        <div id="card-title" class="line">
            <h2>{{ app.user.firstname|capitalize }} {{ app.user.lastname|upper }}</h2>
        </div>
        <div id="contenu" class="line">
            <img src="{{ app.user.gravatar(app.user.mail) }}"  alt=""/>
            <div class="infos">
                <div id="col1">
                    <p><span>Email :</span> {{ app.user.mail }}</p>
                    <p><span>Adresse :</span> {{ app.user.address|capitalize }}</p>
                    <p><span>Ville :</span> {{ app.user.city|capitalize }}</p>
                    <p><span>Code postal :</span> {{ app.user.postCode }}</p>
                </div>
                <div id="col1">
                    <p><span>Login :</span> {{ app.user.login }}</p>
                    <p><span>Numéro de téléphone :</span> 0{{ app.user.tel }}</p>
                    <p><span>Date de naissance :</span> {{ app.user.dateNais|date('d/m/Y') }}</p>
                    <p><span>Age :</span> {{ app.user.age(app.user.dateNais|date('d/m/Y')) }} ans</p>
                </div>
            </div>
        </div>
    </div>
    <div class="valider">
        <a href="{{ path('edit') }}">Modifier des informations</a>
        <span class="material-icons">edit</span>
    </div>

{% endblock body %}
